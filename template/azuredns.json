{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"zoneName": {
			"type": "string",
			"defaultValue": "private.local",
			"metadata": {
				"description": "The name of the DNS zone to be created.  Must have at least 2 segements, e.g. hostname.org"
			}
		},
		"vnetName": {
			"type": "string"
		},
		"subscription":{
			"type": "string"
		}
	},
	"variables": {
		"virtualNetworkName": "[parameters('vnetName')]",
		"vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('virtualNetworkName'))]",
		"mgmtVnet": "[resourceId(concat('mgmt-infra-', parameters('subscription')), 'Microsoft.Network/virtualNetworks', concat('mgmt-infra-', parameters('subscription')))]"
	},
	"resources": [
	{
		"type": "Microsoft.Network/dnszones",
		"name": "[parameters('zoneName')]",
		"apiVersion": "2017-09-15-preview",
		"location": "global",
		"properties": {
			"zoneType": "Private",
			"registrationVirtualNetworks": [
				{
					"id": "[variables('vnetID')]"
				}
			]
		}
	},
	{
	"apiVersion": "2015-01-01",
	"type": "Microsoft.Resources/deployments",
	"name": "updateVNet",
	"dependsOn": [
		"nic1"
	],
	"properties": {
	  "mode": "Incremental",
	  "parameters": {},
	  "template": {
		"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
		"contentVersion": "1.0.0.0",
		"parameters": {},
		"variables": {},
		"resources": [
			{
				"apiVersion": "2017-09-15-preview",
				"name": "[parameters('zoneName')]",
				"location":"global",
				"type": "Microsoft.Network/dnszones",
				"properties": {
					"zoneType": "Private",
					"registrationVirtualNetworks": [
						{
							"id": "[variables('vnetID')]"
						}
					],
					"resolutionVirtualNetworks": [
						{
							"id": "[variables('vnetID')]"
						}
					]
				}
				}
		]
	}
}
	}
	]
}